rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* ======================
    ====================== */

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn()
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    function isBuddy() {
      return isSignedIn()
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "buddy";
    }

    function isManager() {
      return isSignedIn()
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "manager";
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    /* ======================
       ðŸ‘¤ USERS
    ====================== */

    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    /* ======================
       ðŸŒ DESTINATIONS (Khu du lá»‹ch)
    ====================== */
    match /destinations/{destId} {
      // 1. Ai cÅ©ng cÃ³ thá»ƒ xem cÃ¡c Ä‘á»‹a Ä‘iá»ƒm (read)
      allow read: if true;

      // 2. Cho phÃ©p Manager táº¡o Ä‘á»‹a Ä‘iá»ƒm má»›i
      // Äiá»u kiá»‡n: ÄÃ£ Ä‘Äƒng nháº­p vÃ  role pháº£i lÃ  manager (hoáº·c admin)
      allow create: if isSignedIn()
        && (isManager() || isAdmin())
        && request.resource.data.status == "pending" // Báº¯t buá»™c tráº¡ng thÃ¡i Ä‘áº§u vÃ o lÃ  chá» duyá»‡t
        && request.resource.data.managerId == request.auth.uid; // Pháº£i Ä‘Ãºng UID cá»§a mÃ¬nh

      // 3. Chá»‰ Admin má»›i cÃ³ quyá»n Duyá»‡t (Update status) hoáº·c xÃ³a
      // Hoáº·c Manager cÃ³ thá»ƒ sá»­a thÃ´ng tin NHÆ¯NG khÃ´ng Ä‘Æ°á»£c tá»± Ã½ Ä‘á»•i status thÃ nh 'approved'
      allow update: if isAdmin() 
        || (isOwner(resource.data.managerId) && request.resource.data.status == resource.data.status);

      allow delete: if isAdmin();
    }
    
    
    /* ======================
       âœï¸ REVIEWS
       (linh há»“n cá»§a ViVuLocal)
    ====================== */

    match /reviews/{reviewId} {
      allow read: if true;

      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.cost > 0
        && request.resource.data.rating >= 1
        && request.resource.data.rating <= 5;

      allow update: if isSignedIn()
        && resource.data.userId == request.auth.uid;

      allow delete: if isAdmin();
    }

    /* ======================
       ðŸ§­ LOCAL BUDDY
    ====================== */

    match /buddies/{buddyId} {
      allow read: if true;

      allow create: if isOwner(buddyId)
        && isBuddy();

      allow update: if isOwner(buddyId) || isAdmin();

      allow delete: if isAdmin();
    }

    /* ======================
       ðŸ“… BOOKINGS
       (Book Local Buddy)
    ====================== */

    match /bookings/{bookingId} {
      allow read: if isSignedIn()
        && (resource.data.userId == request.auth.uid
            || resource.data.buddyId == request.auth.uid
            || isAdmin());

      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid;

      allow update: if isSignedIn()
        && (resource.data.userId == request.auth.uid
            || resource.data.buddyId == request.auth.uid);

      allow delete: if isAdmin();
    }

    /* ======================
       ðŸ’¬ CHAT
    ====================== */

    match /chats/{chatId} {
      allow read, write: if isSignedIn()
        && request.auth.uid in resource.data.participants;
    }

    match /messages/{messageId} {

  function getChatId(uid1, uid2) {
    return uid1 < uid2 ? uid1 + '_' + uid2 : uid2 + '_' + uid1;
  }

  allow read: if isSignedIn()
    && (
      resource.data.senderId == request.auth.uid
      || resource.data.receiverId == request.auth.uid
    );

  allow create: if isSignedIn()
    && request.resource.data.senderId == request.auth.uid
    && request.resource.data.receiverId != null
    && request.resource.data.chatId ==
        getChatId(request.auth.uid, request.resource.data.receiverId);
}

    /* ======================
       ðŸ¤– CHATBOT HISTORY
       (Lá»‹ch sá»­ chat vá»›i ViVuBot)
    ====================== */

    match /chat_histories/{historyId} {
      allow read, create, update, delete: if isSignedIn()
        && request.auth.uid == resource.data.userId;
    }

    /* ======================
       ðŸ“ DISCOVERY POSTS
       (Manager-created content)
    ====================== */

    match /discovery_posts/{postId} {
      allow read: if true; // Public read access

      allow create: if isManager()
        && request.resource.data.authorId == request.auth.uid
        && request.resource.data.title != ""
        && request.resource.data.content != ""
        && request.resource.data.location != ""
        && request.resource.data.image != "";

      allow update: if isManager()
        && resource.data.authorId == request.auth.uid;

      allow delete: if isManager()
        && resource.data.authorId == request.auth.uid;
    }

    /* ======================
       ðŸ“ SOCIAL POSTS
       (User-created content)
    ====================== */

    match /posts/{postId} {
      allow read: if true; // Public read access

      allow create: if isSignedIn()
        && request.resource.data.authorId == request.auth.uid
        && request.resource.data.title != ""
        && request.resource.data.content != ""
        && request.resource.data.location != "";

      allow update: if isSignedIn()
        && resource.data.authorId == request.auth.uid;

      allow delete: if isSignedIn()
        && (resource.data.authorId == request.auth.uid || isAdmin());
    }

    /* ======================

    ====================== */

    match /tripPlans/{planId} {
      allow read, write: if isSignedIn()
        && request.auth.uid == resource.data.userId;
    }

  }
}
